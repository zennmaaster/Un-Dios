<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- Weather: coarse location for "use device location" feature -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Launcher: query all installed apps for the app drawer -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <!-- Launcher: app usage stats for "recent apps" in the drawer -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <!-- Launcher: widget hosting support -->
    <uses-permission android:name="android.permission.BIND_APPWIDGET" />

    <!-- Launcher: expand notification shade on swipe-down gesture -->
    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR" />

    <!-- Quick Settings: Camera for flashlight control -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Quick Settings: Bluetooth control (Android 12+) -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <!-- Quick Settings: Write system settings (brightness, rotation) -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <!-- Voice Input: Record audio for speech recognition -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".CastorApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="Un-Dios"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Castor"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Main Activity / Launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:resizeableActivity="true"
            android:theme="@style/Theme.Castor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Launcher (home screen replacement) -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- Samsung DeX desktop mode support -->
            <meta-data
                android:name="com.samsung.android.desktopmode.enabled"
                android:value="true" />
        </activity>

        <!-- Notification Listener Service -->
        <service
            android:name="com.castor.feature.notifications.CastorNotificationListener"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <!-- Agent Orchestrator Foreground Service -->
        <service
            android:name="com.castor.agent.orchestrator.AgentService"
            android:foregroundServiceType="specialUse"
            android:exported="false">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="AI agent orchestration maintaining active connections" />
        </service>

        <!-- Media Accessibility Service â€” Kindle/Audible progress tracking -->
        <service
            android:name="com.castor.feature.media.accessibility.MediaAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- Focus Timer Foreground Service -->
        <service
            android:name=".focus.FocusTimerService"
            android:foregroundServiceType="shortService"
            android:exported="false" />

    </application>

</manifest>
